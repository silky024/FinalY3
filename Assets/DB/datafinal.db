CREATE TABLE player (
	player_id INTEGER ,
	username VARCHAR(50) NOT NULL UNIQUE ,
	
	silver INTEGER DEFAULT 0,
	gold INTEGER DEFAULT 0,
	diamond INTEGER DEFAULT 0,
	
	PRIMARY KEY (player_id )
);
/*------------------------------------------------*/
CREATE TABLE gun_type (
	guntype_id INTEGER,
	name TEXT NOT NULL,
	reload INTEGER,
	
	PRIMARY KEY (guntype_id )
);
