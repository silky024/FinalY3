CREATE TABLE inventory(
	player_id INTEGER,
	item_id INTEGER ,
	amount INTEGER,
	
	CONSTRAINT FK_Class FOREIGN Key(player_id)REFERENCES player(player_id)
	CONSTRAINT FK_Class FOREIGN Key(item_id)REFERENCES item(item_id)
	
);
/*-------------------------------------------------------------*/

CREATE TABLE deck (
	player_id INTEGER ,
	card_id INTEGER ,
	level INTEGER DEFAULT 1,
	hp INTEGER ,
	atk INTEGER , 
	def INTEGER ,
	
	CONSTRAINT FK_Class FOREIGN Key(player_id)REFERENCES player(player_id)
	CONSTRAINT FK_Class FOREIGN Key(card_id)REFERENCES card(card_id)

);
/*-------------------------------------------------------------*/

CREATE TABLE mail(
	mail_id INTEGER,
	player_id INTEGER,
	title TEXT NOT NULL,
	reward TEXT NOT NULL,
	item_id INTEGER,
	
	PRIMARY KEY (mail_id)
	
	CONSTRAINT FK_Class FOREIGN Key(player_id)REFERENCES player(player_id)
	CONSTRAINT FK_Class FOREIGN Key(item_id)REFERENCES item(item_id)
	
);
/*------------------------------------------------*/

CREATE TABLE shop (
	item_id INTEGER,
	item_name TEXT NOT NULL,
	silver INTEGER,
	gold INTEGER,
	diamond INTEGER,
	
	CONSTRAINT FK_Class FOREIGN Key(item_id)REFERENCES item(item_id)
);
