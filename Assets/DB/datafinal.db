CREATE TABLE card (
	card_id INTEGER ,
	name TEXT NOT NULL ,
	guntype_id INTEGER ,
	level INTEGER DEFAULT 1,
	rarity TEXT NOT NULL ,
	hp INTEGER ,
	atk INTEGER , 
	def INTEGER ,
	
	PRIMARY KEY (card_id )
	CONSTRAINT FK_Class FOREIGN Key(guntype_id)REFERENCES gun_type(guntype_id)
	
);
